<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/rl_2marketIn"
    android:background="#f0eef4">

    <TextView
        android:id="@+id/tv_2marketInTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="   市场"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center|start"
        android:background="#fafafc"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/arrowleft"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:id="@+id/ll_bOrSTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_2marketInTitle"
        android:background="#fafafc"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/smssdk_transparent"
            android:text="我要购入"
            android:textSize="15sp"
            android:textColor="#0359a2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="15sp"
            android:background="@color/smssdk_transparent"
            android:text="我有闲置" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_bOrSTool"
        android:layout_above="@id/ll_2marketMenuBar"
        android:background="#fafafc"
        android:layout_marginTop="5dp"
        android:dividerHeight="7dp"/>

    <LinearLayout
        android:id="@+id/ll_2marketMenuBar"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#fafafc">

        <Button
            android:id="@+id/btn_2marketIndex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="主页"
            android:gravity="center|bottom"
            android:layout_weight="0.1"
            android:layout_marginTop="3dp"
            android:drawableTop="@drawable/marketindex"
            android:background="@color/smssdk_transparent"/>

        <Button
            android:id="@+id/btn_2marketIn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/smssdk_transparent"
            android:text="市场"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="0dp"
            android:drawableTop="@drawable/marketin"
            android:gravity="center|bottom"
            android:layout_weight="0.1"/>

        <Button
            android:id="@+id/btn_2marketMessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/smssdk_transparent"
            android:text="消息"
            android:gravity="center|bottom"
            android:layout_marginTop="3dp"
            android:drawableTop="@drawable/marketmessage"
            android:layout_weight="0.1"/>

        <Button
            android:id="@+id/btn_2marketMine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/smssdk_transparent"
            android:text="我的"
            android:layout_marginTop="3dp"
            android:drawableTop="@drawable/marketmine"
            android:gravity="center|bottom"
            android:layout_weight="0.1"/>
    </LinearLayout>

</RelativeLayout>