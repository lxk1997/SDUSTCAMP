<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f0eef4">

    <include layout="@layout/market_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="#fafafc">

        <TextView
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:text="头像"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_marginLeft="15dp"
            android:typeface="monospace"
            android:textColor="#000"
            android:textSize="15sp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_im_user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            android:layout_marginRight="18dp"
            app:riv_oval="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="#fafafc">

        <TextView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:text="昵称"
            android:gravity="center|left"
            android:layout_marginLeft="15dp"
            android:typeface="monospace"
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_im_user_nick"
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:gravity="center|right"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:typeface="monospace"
            android:textColor="#000"
            android:textSize="17dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_im_user_chatAsStranger"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_nomal_shape"
        android:text="陌生人聊天"
        android:textColor="#fff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_im_user_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_nomal_shape"
        android:text="添加好友"
        android:textColor="#fff"
        android:textSize="17sp" />

</LinearLayout>