<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eef4">

    <include layout="@layout/market_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/et_friendNum"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:hint="请输入要搜索的手机号"
            android:layout_height="55dp"
            android:paddingStart="20dp"
            android:textColor="#5e5e5e"
            android:background="@drawable/et_nomal_shape"/>

        <Button
            android:id="@+id/btn_search_user"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_nomal_shape"
            android:text="搜索"
            android:textSize="18sp"
            android:typeface="monospace"
            android:textColor="#fff" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_search_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:dividerHeight="5dp">

    </ListView>

</LinearLayout>