<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eef4">

    <include layout="@layout/market_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2018年上半年大学生英语四、六级考试(含口试)成绩查询"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="28sp"
        android:typeface="monospace"
        android:layout_marginTop="15dp"
        android:textColor="#0359a2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="准考证号:"
            android:layout_marginLeft="21dp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_cet46_num"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:textSize="25sp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:maxLength="15"
            android:inputType="number"
            android:maxLines="1"
            android:gravity="left|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="姓名:"
            android:layout_marginLeft="70dp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_cet46_name"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:textSize="25sp"
            android:layout_weight="1"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="50dp"
            android:maxLines="1"
            android:maxLength="7"
            android:inputType="text"
            android:gravity="left|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="验证码:"
            android:layout_marginLeft="45dp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_cet46_modifyKey"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:textSize="25sp"
            android:layout_marginLeft="13dp"
            android:maxLines="1"
            android:maxLength="7"
            android:inputType="text"
            android:gravity="left|bottom"/>

        <ImageView
            android:id="@+id/iv_cet46_modify"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_cet46_query"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="查询"
        android:textSize="25sp"
        android:textColor="#fff"
        android:background="#0359a2"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
</LinearLayout>