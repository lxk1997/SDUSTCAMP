<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eef4">

    <include layout="@layout/market_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_term"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"></Spinner>

        <Spinner
            android:id="@+id/sp_classprop"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"></Spinner>
    </LinearLayout>

    <com.bin.david.form.core.SmartTable
        android:id="@+id/st_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>