<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include layout="@layout/market_header"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sdustlogo"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    
    <EditText
        android:id="@+id/et_sdustcode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入学号"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="21sp"
        android:background="@drawable/et_nomal_shape"/>

    <EditText
        android:id="@+id/et_sdustpass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入密码"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="21sp"
        android:inputType="textPassword"
        android:background="@drawable/et_nomal_shape"/>


    <Button
        android:id="@+id/btn_sdustconnect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_nomal_shape"
        android:layout_marginTop="15dp"
        android:text="绑定"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="#fff"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

</LinearLayout>