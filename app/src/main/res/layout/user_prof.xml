<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f0eef4">

    <TextView
        android:id="@+id/tv_userInfo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableLeft="@drawable/arrowleft"
        android:gravity="center|left"
        android:background="#fafafc"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_userProf"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btn_selectImage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_userProf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="修改头像"
        android:textSize="20sp"
        android:textColor="#0359a2"
        android:background="@drawable/bt_shapeprof"/>

    <Button
        android:id="@+id/btn_exitUserProf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fafafc"
        android:text="确认修改"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textSize="20sp"/>
</RelativeLayout>