<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eef4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_titleMine"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#0359a2"
        android:gravity="center|left"
        android:text="   我的"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_userView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0359a2"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_prof"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:riv_oval="true" />


        <TextView
            android:id="@+id/tv_signIn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#0359a2"
            android:drawableRight="@drawable/arrowright"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:text="点击登陆"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_modifyKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#fafafc"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#fafafc"
            android:scaleType="fitXY"
            android:clickable="false"
            android:src="@drawable/modifykey" />

        <TextView
            android:id="@+id/btn_modifyKey"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#fafafc"
            android:gravity="center|left"
            android:text="   修改密码"
            android:textColor="#5e5e5e"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stuId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#fafafc"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#fafafc"
            android:scaleType="fitXY"
            android:clickable="false"
            android:src="@drawable/bundling" />

        <TextView
            android:id="@+id/btn_stuId"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#fafafc"
            android:gravity="center|left"
            android:text="   绑定学号"
            android:textColor="#5e5e5e"
            android:layout_weight="1"/>
    </LinearLayout>

