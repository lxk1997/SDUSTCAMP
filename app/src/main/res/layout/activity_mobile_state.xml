<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eef4">

    <include layout="@layout/market_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="话费信息"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="28sp"
        android:typeface="monospace"
        android:layout_marginTop="20dp"
        android:textColor="#0359a2"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="可用余额:"
            android:layout_marginLeft="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_mobile_fee_balance"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:textSize="25sp"
            android:text="45.78"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:gravity="left|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="套餐流量"
            android:layout_marginLeft="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_mobile_data"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:textSize="25sp"
            android:text="本月可用9500MB"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:gravity="left|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="更新时间:"
            android:layout_marginLeft="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_mobile_update_time"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:textSize="25sp"
            android:text="2015-11-20 08.46"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:gravity="left|bottom"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_mobile_fee_query"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="查询"
        android:textSize="25sp"
        android:textColor="#fff"
        android:background="#0359a2"
        android:layout_margin="20dp"/>

</LinearLayout>